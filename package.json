{
    "name": "lwr-project",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "type": "module",
    "scripts": {
        "build:css": "tailwindcss -i src/styles/styles.css -o src/assets/styles/tailwind.css",
        "clean": "rm -rf __lwr_cache__",
        "dev": "yarn build:css && lwr dev",
        "start": "lwr start --mode prod",
        "start:compat": "lwr start --mode compat",
        "start:prod-compat": "lwr start --mode prod-compat",
        "test": "jest"
    },
    "dependencies": {
        "lwc": "3.3.3",
        "lwr": "0.10.6"
    },
    "devDependencies": {
        "@lwc/jest-preset": "14.1.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "tailwindcss": "3.3.3"
    },
    "engines": {
        "node": ">=16.20 <19"
    }
}
