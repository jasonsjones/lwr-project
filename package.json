{
    "name": "lwr-project",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean:all": "yarn workspaces run clean:all && rm -rf node_modules",
        "dev": "concurrently -n API,API-v2,APP -c blue,magenta,green \"yarn dev:api\" \"yarn dev:api-fastify\" \"yarn dev:app\"",
        "dev:api": "yarn workspace @lwr-project/api run dev",
        "dev:api-fastify": "yarn workspace @lwr-project/api-fastify run dev",
        "dev:app": "yarn workspace @lwr-project/app run dev",
        "lint": "yarn workspaces run lint",
        "prepare": "yarn workspace @lwr-project/wires run build",
        "test": "yarn workspaces run test"
    },
    "devDependencies": {
        "concurrently": "8.2.1",
        "eslint": "8.50.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-prettier": "5.0.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "prettier": "3.0.3"
    },
    "license": "MIT"
}
